{
  "name": "gitea-integration",
  "displayName": "Gitea Integration",
  "description": "A modern React-based VS Code extension to integrate with Gitea repositories, allowing you to view and manage pull requests and issues",
  "version": "1.1.0",
  "publisher": "SakunPanthi",
  "repository": {
    "type": "git",
    "url": "https://github.com/SakunPanthi123/gitea-vscode-extension.git"
  },
  "icon": "gitea-svgrepo-com.png",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:gitea.viewPullRequests",
    "onCommand:gitea.viewIssues",
    "onCommand:gitea.refreshPullRequests",
    "onCommand:gitea.refreshIssues",
    "onCommand:gitea.showPullRequestDetails",
    "onCommand:gitea.showIssueDetails"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitea.viewPullRequests",
        "title": "View Pull Requests",
        "category": "Gitea"
      },
      {
        "command": "gitea.viewIssues",
        "title": "View Issues",
        "category": "Gitea"
      },
      {
        "command": "gitea.refreshPullRequests",
        "title": "Refresh Pull Requests",
        "category": "Gitea",
        "icon": "$(refresh)"
      },
      {
        "command": "gitea.refreshIssues",
        "title": "Refresh Issues",
        "category": "Gitea",
        "icon": "$(refresh)"
      },
      {
        "command": "gitea.showPullRequestDetails",
        "title": "Show Pull Request Details",
        "category": "Gitea"
      },
      {
        "command": "gitea.showIssueDetails",
        "title": "Show Issue Details",
        "category": "Gitea"
      },
      {
        "command": "gitea.listAllPullRequests",
        "title": "List All Pull Requests",
        "category": "Gitea",
        "icon": "$(list-unordered)"
      },
      {
        "command": "gitea.listAllIssues",
        "title": "List All Issues",
        "category": "Gitea",
        "icon": "$(list-unordered)"
      },
      {
        "command": "gitea.createIssue",
        "title": "Create Issue",
        "category": "Gitea",
        "icon": "$(add)"
      }
    ],
    "views": {
      "gitea-panel": [
        {
          "id": "giteaPullRequests",
          "name": "Pull Requests",
          "when": "giteaPullRequestsVisible"
        },
        {
          "id": "giteaIssues",
          "name": "Issues",
          "when": "giteaIssuesVisible"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitea-panel",
          "title": "Gitea",
          "icon": "$(git-pull-request)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "gitea.refreshPullRequests",
          "when": "view == giteaPullRequests",
          "group": "navigation"
        },
        {
          "command": "gitea.listAllPullRequests",
          "when": "view == giteaPullRequests",
          "group": "navigation"
        },
        {
          "command": "gitea.refreshIssues",
          "when": "view == giteaIssues",
          "group": "navigation"
        },
        {
          "command": "gitea.listAllIssues",
          "when": "view == giteaIssues",
          "group": "navigation"
        },
        {
          "command": "gitea.createIssue",
          "when": "view == giteaIssues",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Gitea",
      "properties": {
        "gitea.instanceURL": {
          "type": "string",
          "description": "Gitea instance URL"
        },
        "gitea.owner": {
          "type": "string",
          "description": "Repository owner"
        },
        "gitea.repo": {
          "type": "string",
          "description": "Repository name"
        },
        "gitea.token": {
          "type": "string",
          "description": "Gitea API token"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run build-webview",
    "watch": "tsc -watch -p ./",
    "build-webview": "cd webview-ui && npm run build",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.9",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "axios": "^1.11.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
